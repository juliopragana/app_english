<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-2">
            <!-- Button aciona modal -->
            <div class="d-flex justify-content-between">
                <h1> Categorias </h1>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Cadastrar categoria
                </button>
               
            </div>
            
        </div>
        <div class="col-md-12 mt-2">
            <table id="table" class="table table-striped table-sm table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>

    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-lg" id="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastrar nova categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input class="form-control" type="text" name="name" id="name" placeholder="Nome da categoria"><br>
                <button class="btn btn-success" onclick="save_categorie()">Cadastrar</button>
                <button class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
            </div>            
        </div>
    </div>
</div>

<%- include ('../../partials/footer') %>
<script>
    load_table_categories();
</script>