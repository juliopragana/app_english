<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>

     <!-- Main Wrapper -->
     <div class="p-1 my-container active-cont">
        <div class="container" id="container">
            <div class="row">
                <div class="col-md-12" style="background-color: #fff;">
                    <!-- Button aciona modal -->
                    <div class="d-flex justify-content-between">
                        <h1> Frases</h1>
                        <button type="button" class="btn btn-success btn-sm mb-2" onclick="openModalPhrase()">
                            <i class="fa-sharp fa-solid fa-plus"></i> Cadastrar frase
                        </button>
                    </div>                    
                </div>
                <div class="col-md-12 mt-2">
                    
                    <table id="table" class="table table-striped table-sm table-bordered dt-responsive nowrap" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Frase em Português</th>
                                <th>Frase em Inglês</th>
                                <th>Pronúncia</th>
                                <th>Categoria</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



    

        <!-- Modal -->
    <div class="modal fade" id="modalPhrase" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
        <div class="modal-dialog modal-lg" id="modal">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="exampleModalLabel">Cadastrar nova frase</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="form-save-phrase">
                        <label for="portuguese " class="form-label">Texto em português</label>
                        <input class="form-control mb-3" type="text" name="portuguese" id="portuguese">
                        <label for="english" class="form-label">Texto em inglês</label>
                        <input class="form-control mb-3" type="text" name="english" id="english">
                        <label for="pronunciation" class="form-label">Pronúncia</label>
                        <input class="form-control mb-3" type="text" name="pronunciation" id="pronunciation">
                        <label for="selectCategories" class="form-label">Categoria</label>
                        <select class="form-select mb-3" aria-label="Default select example" id="selectCategories" name="selectCategories">
                            <option>Selecione uma categoria</option>
                            <% categories.forEach((category) => { %>
                                <option value="<%= category.id %>"><%= category.name %></option>
                            <% }) %>
                        </select>
                        <label for="audio" class="form-label">Áudio</label>
                        <input type="file" class="form-control" name="audio" id="audio" accept=".mp3">
                        <div class="mt-4">
                            <button class="btn btn-success" id="btnModalPhrase" onclick="save_phrase()">Cadastrar</button>
                            <button class="btn btn-danger" onclick="close_modal()">Fechar</button>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>

<%- include ('../../partials/footer') %>
<script>
    load_table_phrases();    
</script>